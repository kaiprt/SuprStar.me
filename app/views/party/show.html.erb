<body class="show">


  <div id="container">

    <div id="left_side">
        <div class="videoContainer">
          <div id="videoPlayer"></div>
          <button class="button" id="start">Start!</button>
          <button class="button" id="next">Next Star!</button>
        </div>
    </div>

    <div id="top_right_side">
      <% if current_party %>
        <h2>Want to join?</h2>
        <h2 class="info_bar"> Text: <%= @party.hash_tag%> </h2>
        <h3>to 1-845-443-4529</h3>
      <% end %>
    </div>

    <div id="right_side">
      <div id="songlist">
        <h2>Songlist</h2>
        <ul class="queue">
          <li>Trophies- Drake (Karaoke)</li>
          <li>Underground Kings- Drake (Karaoke)</li>
          <li>Poundcake- Drake (Karaoke)</li>
          <li>Vertigo- U2 (Karaoke)</li>
          <li>Without Me- Eminem (Karaoke)</li>
          <% @queue.each do |song| %>
          <!-- <li id="#{sond.id}"> <%#= song[:name] %> </li> -->
          <% end %>
        </ul>
      </div>

      <div id="comments">
        <h2>Comments</h2>
        <ul class="comment">
          <% if @comments %>
          <% @comments.each do |comment| %>
          <li  data-time="<%= comment.created_at.to_i%>">
            <%= comment.user.name %> says <%= comment.content %> </li>
          <% end %>
          <% end %>
          <li> Kai says, "Welcome to SuperStar Me!"</li>
          </ul>
        </div>
      </div>

    </body>
